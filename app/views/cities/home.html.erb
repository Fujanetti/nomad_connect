<div class="container">
  <section class="cities">
    <% @cities.each do |city| %>
      <%= link_to city_path(city) do %>
        <div class="card-city" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path city.photo_key, height:300, width:300 %>)">
          <%= city.name %>
        </div>
      <% end %>
    <% end %>
  </section>
</div>

