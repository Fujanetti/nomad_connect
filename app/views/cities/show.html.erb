  
  <div class="img-container">
    <%= cl_image_tag @city.photo_key, class: "img-show-city"%>
    <h1 class="text-center main-title"><%= @city.name %></h1>
    <%= render partial: "shared/weather", locals: {weather_results: @weather_results, city_name: @city_name} %>
  </div>

  <div class="container mb-5">
    <section class="features">
      <%= link_to city_forum_posts_path(@city, @city.forums.first) do %>
        <div class="card-feature" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1487537023671-8dce1a785863?ixid=MXwxMjA3fDB8MHxzZWFyY2h8M3x8cG9kY2FzdHxlbnwwfDB8MHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60)">
          Discussion
        </div>
      <% end %>
      
      <%= link_to city_headlines_path(@city) do %>
        <div class="card-feature" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1523120974498-9d764390d8e5?ixid=MXwxMjA3fDB8MHxzZWFyY2h8OHx8dHlwaW5nJTIwbWFjaGluZXxlbnwwfHwwfA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60)">
          Local News
        </div>
      <% end %>
      <%= link_to city_events_path(@city) do %>
        <div class="card-feature" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1611302457661-d24c21494f2a?ixid=MXwxMjA3fDB8MHxzZWFyY2h8MjJ8fGNhbGVuZGFyfGVufDB8MHwwfA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60)">
          Events
        </div>
      <% end %>

      <%= link_to city_faq_index_path(@city) do %>
        <div class="card-feature" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1512314889357-e157c22f938d?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxzZWFyY2h8MXx8aWRlYXxlbnwwfDB8MHw%3D&auto=format&fit=crop&w=500&q=60)">
          FAQ
        </div>
      <% end %>
    </section>
  </div>

