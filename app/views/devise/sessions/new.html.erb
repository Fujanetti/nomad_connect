
<div class="login-container">
<div class="doc-content">
<div class="header-cont">
<h2><strong>Log in</strong></h2>
<div class="d-flex">
  <p class="mr-2" > Not registered yet?</p>
  <button type="button" class="forgot-password sign-up-text" data-toggle="modal" data-target="#signupModal">
    Signup now!
  </button> 
</div>
</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "forgot-password" %><br />
      <% end %>

    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Login", class: "login-btn" %>
  </div>
<% end %>
</div>
      <div class= "links-container doc-content">
        <div class="or-word">
        <strong>OR</strong>
        </div>
<%= link_to user_facebook_omniauth_authorize_path do  %>
<div class="facebook-button d-flex link-btn">
<i class="fab fa-facebook-f"></i><p>Login with FaceBook</p>
</div>
<% end %>
<%= link_to user_google_oauth2_omniauth_authorize_path do %>
<div class= "google-button d-flex link-btn">
<img src="https://img.icons8.com/fluent/48/000000/google-logo.png"/><p>Login with Google</p>
</div>
<% end %>
<%= link_to user_github_omniauth_authorize_path do %>
<div class= "github-button d-flex link-btn">
<i class="fab fa-github"></i><p>Login with GitHub</p>
</div>
<% end %>

</div>

<%= render 'shared/signup' %>